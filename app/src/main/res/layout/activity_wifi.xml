<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/webView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiffieverywhere.mattd.wiffi_everywhere.ConfigActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="492dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="11dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Configura tu wifi"
            android:textColor="?attr/editTextColor"
            tools:textColorHint="?attr/editTextColor" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="SSID / Identificador del Wiffi"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColorHint="?attr/editTextColor" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPersonName"
            android:textColorHint="?attr/editTextColor" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Velocitat (Mbps)"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="?attr/editTextColor" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seleccionar ubicacion"
            android:theme="@style/AppTheme.Dark.Dialog" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actualizar Informacion"
            android:theme="@style/AppTheme.Dark.Dialog"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
