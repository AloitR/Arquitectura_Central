<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="b"
        android:title="Wifi Sharing" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="a"
        android:title="Auto Connect"
        android:summary="Connect to nearest wifi if aviable" />

    <EditTextPreference
        android:capitalize="words"
        android:key="example_text"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Max number of users to share"
        android:title="My Wifi Connections" />

    <EditTextPreference
        android:capitalize="words"
        android:key="c"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Speed in MB to share"
        android:title="My Wifi Speed" />



